@model IEnumerable<StaffSystem.Infrastructure.Dto.EmployeeDto>

@{
    ViewData["Title"] = "Персонал";
}

<h1>Список працівників</h1>

<form asp-controller="Employee" asp-action="Index" method="get" class="mb-4 p-3 border rounded">
    <h4>Фільтри пошуку</h4>
    <div class="row">
        <div class="col-md-3">
            <label for="name">ПІБ</label>
            <input type="text" name="name" class="form-control" value="@ViewBag.CurrentName" />
        </div>
        <div class="col-md-3">
            <label for="department">Відділ</label>
            <input type="text" name="department" class="form-control" value="@ViewBag.CurrentDepartment" />
        </div>
        <div class="col-md-3">
            <label for="position">Посада</label>
            <input type="text" name="position" class="form-control" value="@ViewBag.CurrentPosition" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Шукати</button>
            <a asp-action="Index" class="btn btn-secondary">Скинути</a>
        </div>
    </div>
</form>

<div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn">Повернутися на головну</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ПІБ</th>
            <th>Відділ</th>
            <th>Посада</th>
            <th>Оклад</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LastName @item.FirstName @item.MiddleName</td>
                <td>@item.DepartmentName</td>
                <td>@item.PositionName</td>
                <td>@item.Salary.ToString("C2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-primary">Переглянути</a>
                </td>
            </tr>
        }
    </tbody>
</table>