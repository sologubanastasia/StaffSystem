@model IEnumerable<StaffSystem.Infrastructure.Dto.EmployeeDto>

@{
    ViewData["Title"] = "Звіт заробітньої плати";
    // Розрахунок загальної суми окладів
    decimal totalSalary = Model?.Sum(e => e.Salary) ?? 0;
}

<h1>Звіт заробітньої плати</h1>

<form asp-controller="Report" asp-action="SalaryReport" method="get" class="mb-4 p-3 border rounded">
    <h4>Фільтри для звіту</h4>
    <div class="row">
        
        <div class="col-md-4">
            <label for="filterType">Тип фільтру:</label>
            <select name="filterType" class="form-select">
                @{
                    // Явно отримуємо поточний тип фільтру для використання в логіці
                    var currentFilter = ViewBag.CurrentFilterType as string;
                }
                
                @if (string.IsNullOrEmpty(currentFilter))
                {
                    <option value="" selected>Всі працівники (Оберіть тип фільтру)</option>
                }
                else
                {
                    <option value="">Всі працівники (Оберіть тип фільтру)</option>
                }

                @if (currentFilter == "Department")
                {
                    <option value="Department" selected>Відділ</option>
                }
                else
                {
                    <option value="Department">Відділ</option>
                }
                
                @if (currentFilter == "Position")
                {
                    <option value="Position" selected>Посада</option>
                }
                else
                {
                    <option value="Position">Посада</option>
                }

                @if (currentFilter == "Name")
                {
                    <option value="Name" selected>ПІБ (Прізвище, Ім'я, По батькові)</option>
                }
                else
                {
                    <option value="Name">ПІБ (Прізвище, Ім'я, По батькові)</option>
                }
                
            </select>
        </div>
        
        <div class="col-md-4">
            <label for="filterValue">Значення фільтру:</label>
            <input type="text" name="filterValue" class="form-control" value="@ViewBag.CurrentFilterValue" placeholder="Введіть значення..." />
        </div>
        
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Сформувати звіт</button>
            <a asp-controller="Report" asp-action="SalaryReport" class="btn btn-secondary">Скинути</a>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <div class="alert alert-info">
        Загальна сума окладів за поточним фільтром: 
        <strong>@totalSalary.ToString("C2")</strong>
    </div>
    
    <a asp-action="Export" 
       asp-controller="Employee" 
       asp-route-filterType="@ViewBag.CurrentFilterType" 
       asp-route-filterValue="@ViewBag.CurrentFilterValue" 
       class="btn btn-primary mb-3">
        3.1 Вивантажити в TXT
    </a>
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ПІБ</th>
                <th>Відділ</th>
                <th>Посада</th>
                <th>Оклад</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LastName @item.FirstName @item.MiddleName</td> 
                    <td>@item.DepartmentName</td>
                    <td>@item.PositionName</td>
                    <td>@item.Salary.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.SearchAttempted == true)
{
    <div class="alert alert-warning">
        Дані по заданим критеріям не знайдено
    </div>
}